<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="MainMenuBackgroundColor">
        <item name="android:background">@color/Menu_Night</item>
         </style>

    <style name="SettingsBackgroundColor">
        <item name="background">@color/Menu_Night</item>
    </style>
    
    <style name="SettingsTitleTextColor">
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="ActivityMainButtons" parent="Widget.MaterialComponents.Button">

                    <item name="android:layout_width">match_parent</item>
                     <item name="android:layout_height">wrap_content</item>
                    <item name="android:backgroundTint">@color/white</item>
                    <item name="android:textColor">@color/MainMenuButton</item>
                     <item name="android:textSize">@dimen/TopText</item>
                        <item name="android:textAllCaps">false</item>
                         <item name="android:layout_marginStart">17dp</item>
                        <item name="android:layout_marginEnd">@dimen/Margin16</item>
                        <item name="android:fontFamily">@font/ys_display_medium</item>
</style>

<style name="SettingsScreenTextView">
      <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_marginTop">@dimen/Margin21</item>
     <item name="android:layout_marginBottom">@dimen/Margin21</item>
     <item name="android:layout_marginLeft">@dimen/Margin16</item>
        <item name="android:textColor">@color/white</item>
     <item name="android:textSize">@dimen/LowerText</item>
      <item name="android:fontFamily">@font/ys_display_regular</item>
</style>



    <style name="IconColors">
        <item name="android:tint">@color/white</item>

    </style>


    <style name="BackIconColor">
        <item name="android:tint">@color/white</item>
    </style>
</resources>