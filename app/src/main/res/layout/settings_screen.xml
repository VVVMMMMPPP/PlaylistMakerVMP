<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SettingsBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            style="@style/IconColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginTop="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:src="@drawable/back">


        </ImageView>

        <TextView
            style="@style/SettingsTitleTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/Settings"
            android:textSize="@dimen/TopText"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            android:text="Темная тема"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/shareApp"
            style="@style/SettingsScreenTextView"
            android:text="@string/app_share"></TextView>

        <ImageView
            style="@style/IconColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin22"
            android:layout_marginEnd="@dimen/margin20"
            android:src="@drawable/share"></ImageView>


    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/supportButton"
            style="@style/SettingsScreenTextView"
            android:text="@string/support"></TextView>

        <ImageView
            style="@style/IconColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin22"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="@dimen/margin20"
            android:src="@drawable/support"></ImageView>


    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/policyButton"
            style="@style/SettingsScreenTextView"
            android:text="@string/user_rules"></TextView>

        <ImageView
            style="@style/IconColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/margin20"
            android:layout_marginBottom="@dimen/margin22"
            android:src="@drawable/arrow_forward"></ImageView>


    </FrameLayout>


</LinearLayout>


