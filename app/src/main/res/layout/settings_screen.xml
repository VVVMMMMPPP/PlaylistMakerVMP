<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/Menu_white"
    >


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/back"
   android:layout_marginTop="20dp"
   android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp">


  </ImageView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/Settings"
      android:textColor="@color/MainMenuButton"
      android:textSize="@dimen/TopText"
      android:layout_marginTop="14dp"
      android:textStyle="bold">

  </TextView>


 </LinearLayout>
 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="40dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 android:text="@string/dark_theme"
    android:textColor="@color/black"
android:textSize="@dimen/LowerText"
 android:layout_marginLeft="16dp"
 android:layout_marginVertical="21dp">
    </TextView>

  <Switch
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_gravity="end"
      android:layout_marginVertical="8dp"
      android:layout_marginEnd="25dp"
      android:minWidth="48dp"></Switch>
 </FrameLayout>


 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="0dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/app_share"
      android:textColor="@color/black"
      android:textSize="@dimen/LowerText"
      android:layout_marginLeft="16dp"
      android:layout_marginVertical="21dp">
  </TextView>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
   android:src="@drawable/share"
   android:layout_gravity="end"
   android:layout_marginEnd="21dp"
   android:layout_marginTop="22dp"></ImageView>






 </FrameLayout>


 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="0dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/support"
      android:textColor="@color/black"
      android:textSize="@dimen/LowerText"
      android:layout_marginLeft="16dp"
      android:layout_marginVertical="21dp">
  </TextView>
  <ImageView
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:src="@drawable/support"
   android:layout_gravity="end"
   android:layout_marginEnd="14dp"
   android:layout_marginTop="22.1dp"
   android:layout_marginBottom="20.9dp">
  </ImageView>


 </FrameLayout>


 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/user_rules"
      android:textColor="@color/black"
      android:textSize="@dimen/LowerText"
      android:layout_marginLeft="16dp"
      android:layout_marginVertical="21dp">
  </TextView>

   <ImageView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:src="@drawable/arrow_forward"
    android:layout_gravity="end"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="23dp"></ImageView>



 </FrameLayout>
</LinearLayout>