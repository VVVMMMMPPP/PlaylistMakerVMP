<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/SettingsBackgroundColor">




 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal">


  <ImageView
      android:id="@+id/back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin20"
      android:layout_marginTop="@dimen/margin20"
      android:layout_marginRight="@dimen/margin20"
      android:src="@drawable/back"
      style="@style/IconColors">


  </ImageView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:fontFamily="@font/ys_display_medium"
      android:text="@string/Settings"
      style="@style/SettingsTitleTextColor"
      android:textSize="@dimen/TopText"
      android:textStyle="bold">

  </TextView>


 </LinearLayout>

 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="40dp">

  <TextView
      style="@style/SettingsScreenTextView"
      android:text="@string/dark_theme"></TextView>

  <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/switch_compat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="15dp"
      android:layout_marginTop="8dp"
   android:layout_gravity="end"
      android:checked="false" />

     

 </FrameLayout>


 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <TextView
      android:id="@+id/shareApp"
 style="@style/SettingsScreenTextView"
      android:text="@string/app_share"></TextView>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="22dp"
      android:layout_marginEnd="@dimen/Margin21"
      style="@style/IconColors"
      android:src="@drawable/share"></ImageView>


 </FrameLayout>


 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <TextView
      android:id="@+id/supportButton"
      style="@style/SettingsScreenTextView"
      android:text="@string/support"></TextView>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="22.1dp"
      android:layout_marginEnd="14dp"
      style="@style/IconColors"
      android:layout_marginBottom="@dimen/Margin21"
      android:src="@drawable/support"></ImageView>


 </FrameLayout>


 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <TextView
      android:id="@+id/policyButton"
      style="@style/SettingsScreenTextView"
      android:text="@string/user_rules"></TextView>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/IconColors"
      android:layout_gravity="end"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="@dimen/margin20"
      android:layout_marginBottom="23dp"
      android:src="@drawable/arrow_forward"></ImageView>


 </FrameLayout>


</LinearLayout>


