<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="13dp">

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="@dimen/picture_size"
        android:layout_height="@dimen/picture_size"
        android:src="@drawable/zaglushka"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/track_name"
            style="@style/UpperWordsTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Name"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/ys_display_regular"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/track_artist"
                style="@style/LowerWordsTrack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:fontFamily="@font/ys_display_regular"/>

            <ImageView
                style="@style/IconColors"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:src="@drawable/ellipse_1"
                android:layout_gravity="center_vertical"

                android:layout_marginHorizontal="5dp"/>

            <TextView
                android:id="@+id/track_length"
                style="@style/LowerWordsTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="4:55"
                android:fontFamily="@font/ys_display_regular"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/IconColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"/>

</LinearLayout>